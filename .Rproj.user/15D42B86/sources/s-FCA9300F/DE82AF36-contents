list.data<-list() 
data_name <- c("sample","test","train")
for (i in 1:length(allfiles)) {
  list.data[[i]]<-read.csv(allfiles[i], header = TRUE)
  list.data[[i]] <- as_tibble(list.data[[i]])
  assign(data_name[i],list.data[[i]])
}
